{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(ralph:*)",
      "Bash(mmc:*)",
      "Read",
      "Write",
      "Edit"
    ]
  },
  "hooks": {
    "_comment_1": "Git Safety Guard: ALWAYS ACTIVE - Blocks destructive git commands (reset --hard, push --force, rm -rf, etc.)",
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/git-safety-guard.py",
            "timeout": 5
          }
        ]
      }
    ],
    "_comment_2": "Quality Gates: Disabled by default. Run manually via 'ralph gates'. To enable on Stop, rename '_Stop_disabled' to 'Stop'.",
    "_Stop_disabled": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/hooks/quality-gates.sh",
            "timeout": 300
          }
        ]
      }
    ]
  }
}
